<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="customTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorLightPrimary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorLightSecondary</item>
        <item name="colorSecondaryVariant">@color/Indigo</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:windowBackground">@color/lightBackground</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">#00000000</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="customAlert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/hollow_circle</item>
    </style>

    <style name="customTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Attendance_APP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Attendance_APP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>