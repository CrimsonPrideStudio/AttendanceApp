<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_64dp"
    android:paddingTop="@dimen/padding_32dp"
    android:paddingRight="@dimen/padding_64dp">

    <TextView
        android:id="@+id/title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="Log In Account"
        android:textSize="@dimen/text_size_20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:layout_marginBottom="@dimen/margin_32dp"
            android:src="@drawable/login_placeholder" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_24dp"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center"
            android:text="Enter your Roll Number to login"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input"
            android:inputType="phone"
            android:maxLength="12"
            android:gravity="center"
            android:hint="Roll Number"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:padding="@dimen/padding_16dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/corner_rounded"
            android:gravity="center"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorPrimary"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="SEND"
            android:textAlignment="center"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/corner_rounded"
            android:gravity="center"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorPrimary"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="@dimen/margin_30dp"
            android:text="signup"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>