<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_64dp"
    android:paddingTop="@dimen/padding_32dp"
    android:paddingRight="@dimen/padding_64dp">

    <TextView
        android:id="@+id/title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="Log In Account"
        android:textSize="@dimen/text_size_20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginStart="@dimen/margin_32dp"
            android:layout_marginBottom="@dimen/margin_32dp"
            android:adjustViewBounds="true"
            android:src="@drawable/login_placeholder" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_24dp"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center"
            android:text="Enter your mobile number to login"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_24dp"
            android:gravity="center"
            android:text="We will send you one time password(OTP)"
            android:textColor="@color/lightgray"
            android:textSize="@dimen/text_size_18sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:textCursorDrawable="@drawable/custom_cursor_color"
            android:inputType="phone"
            android:backgroundTint="#f36356"
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="@dimen/margin_32dp"

            android:gravity="center"
            android:hint="@string/enter_mobile_number"

            android:paddingBottom="@dimen/padding_8dp"

            android:textColor="@color/black"
            android:textColorHint="@color/lightgray"

            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/corner_rounded"
            android:backgroundTint="#F36356"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="SEND"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>